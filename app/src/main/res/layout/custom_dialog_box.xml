<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   app:cardCornerRadius="12dp"
    app:strokeColor="@color/white"
    app:strokeWidth="1dp"
    style="@style/Widget.Material3.CardView.Filled"
    android:backgroundTint="@color/black"

    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    >

    <ImageView
        android:id="@+id/cd_preview"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ksi"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_margin="12dp"
        android:layout_below="@id/cd_preview"
        >


        <ImageView
            android:id="@+id/cd_customize"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/custom"
            android:layout_marginEnd="30dp"
            android:tint="@color/white"
            />

        <ImageView
            android:id="@+id/cd_download"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/downloads"
            android:layout_marginEnd="30dp"
            android:tint="@color/white"
            />

        <ImageView
            android:id="@+id/cd_share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/share"
            android:tint="@color/white"
            />



    </LinearLayout>

</RelativeLayout>

</com.google.android.material.card.MaterialCardView>